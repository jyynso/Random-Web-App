@model IPT_MVC_Activity.Models.Miniature

@{
    ViewData["Title"] = "Create";
}

<h1 class="Text1"
    style="font-size:50px;
           margin-top:15px;">Add New User</h1>

<h4>Users</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TableReady" /> @Html.DisplayNameFor(model => model.TableReady)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                    <button type="submit"
                            class="black_btn"
                            style="padding:10px 30px;">Create</button>
                @* <input type="submit" value="Create" class="btn btn-primary" /> *@
            </div>
        </form>
    </div>
</div>

<div>
    <form method="post" asp-action="Index">
        <button type="submit"
                class="black_btn"
                style="padding:10px 30px;">Back to List</button>
    </form>
</div>

